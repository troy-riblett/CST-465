@model CST465.ProductModel
@{
    Layout = null;
}

@Html.AntiForgeryToken()
@Html.HiddenFor(model => model.ID)

<div>
    @Html.LabelFor(model => model.Code, new { @class = "labelOwnLine" })
    @Html.TextBoxFor(model => model.Code)
    @Html.ValidationMessageFor(model => model.Code)
</div>
<div>
    @Html.LabelFor(model => model.Name, new { @class = "labelOwnLine" })
    @Html.TextBoxFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
</div>
<div>
    @Html.LabelFor(model => model.CategoryName, new { @class = "labelOwnLine" })
    @Html.DropDownListFor(model => model.CategoryName, new SelectList((List<CST465.CategoryData>)ViewData["Categories"], "Name", "Name"))
    @Html.ValidationMessageFor(model => model.CategoryName)
</div>
<div>
    @Html.LabelFor(model => model.Price, new { @class = "labelOwnLine" })
    @Html.TextBoxFor(model => model.Price)
    @Html.ValidationMessageFor(model => model.Price)
</div>
<div>
    @Html.LabelFor(model => model.Quantity, new { @class = "labelOwnLine" })
    @Html.TextBoxFor(model => model.Quantity)
    @Html.ValidationMessageFor(model => model.Quantity)
</div>

@Html.LabelFor(model => model.Description)
<br />
@Html.TextAreaFor(model => model.Description)
@Html.ValidationMessageFor(model => model.Description)
<br />